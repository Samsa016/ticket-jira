
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Board {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  tasks     Task[]
  order     Int      @default(0)
}

model Task {
  id        String   @id @default(uuid())
  content   String
  status    String   @default("TODO")
  createdAt DateTime @default(now())
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
}